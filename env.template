# =============================================================================
# n8n Docker Compose Local Development Environment
# =============================================================================

# Timezone Configuration
GENERIC_TIMEZONE=UTC

# =============================================================================
# n8n Configuration
# =============================================================================

# n8n Version - Change this to use different versions
N8N_VERSION=1.112.4

N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http

# n8n Database Configuration
N8N_DB_TYPE=postgresdb
N8N_DB_POSTGRESDB_HOST=postgres
N8N_DB_POSTGRESDB_PORT=5432
N8N_DB_POSTGRESDB_DATABASE=n8n
N8N_DB_POSTGRESDB_USER=n8n
N8N_DB_POSTGRESDB_PASSWORD=n8n_password

# n8n Security Configuration
N8N_ENCRYPTION_KEY=your-encryption-key
N8N_USER_MANAGEMENT_DISABLED=false

# n8n Logging Configuration
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console

# n8n Execution Configuration
N8N_EXECUTIONS_PROCESS=main
N8N_EXECUTIONS_MODE=regular
N8N_QUEUE_BULL_REDIS_HOST=redis
N8N_QUEUE_BULL_REDIS_PORT=6379
N8N_QUEUE_BULL_REDIS_DB=0

# n8n Webhook Configuration (should match the URL you will access)
WEBHOOK_URL=http://localhost:5678/

# n8n File System Configuration
N8N_DEFAULT_BINARY_DATA_MODE=filesystem
N8N_BINARY_DATA_TTL=24

# =============================================================================
# PostgreSQL Configuration
# =============================================================================

# PostgreSQL Version
POSTGRES_VERSION=16-alpine

# PostgreSQL Database Configuration
POSTGRES_DB=n8n
POSTGRES_USER=n8n
POSTGRES_PASSWORD=n8n_password

# PostgreSQL Data Persistence
POSTGRES_DATA_PATH=./postgres-data

# =============================================================================
# Redis Configuration (for n8n queue)
# =============================================================================

# Redis Version
REDIS_VERSION=8-alpine

# Redis Configuration
REDIS_PASSWORD=redis_password
